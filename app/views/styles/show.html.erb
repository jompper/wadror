<h1><%= @style.name %></h1>

<p>
  <%= @style.description %>
</p>
<br>
<% if not @style.beers.empty? %>
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Beer</th>
          <th>Brewery</th>
        </tr>
      </thead>
      <tbody>
        <% @style.beers.each do |beer| %>
            <tr>
              <td><%= link_to beer.name, beer %></td>
              <td><%= link_to beer.brewery, beer.brewery %></td>
            </tr>
        <%end%>
      </tbody>
    </table>
    <br>
<%end%>

<%= edit_and_destroy_buttons(@style) %>
<%= link_to 'Back', styles_path %>
