
<h2>
  <%= @brewery.name %>
</h2>

<p style="font-style: italic;">
  Established in
  <%= @brewery.year %>
</p>

<p>
  Number of beers
  <%= @brewery.beers.count %>
</p>

<p>
  <% @brewery.beers.each do |beer| %>
    <%= link_to beer.name, beer %>
  <% end %>
</p>

<p>
  <% if @brewery.ratings.empty? %>
      Brewery has not yet been rated!
  <% else %>
      Has <%= pluralize(@brewery.ratings.count, 'rating') %>, average <%= @brewery.average_rating %>
  <% end %>
</p>
<% if not current_user.nil? %>
    <%= link_to 'Edit', edit_brewery_path(@brewery) %> |
    <% if current_user.admin %>
        <%= link_to 'Destroy', @brewery, method: :delete, data: { confirm: 'Are you sure?' } %> |
    <% end %>
<% end %>
<%= link_to 'Back', breweries_path %>
